class Solution:
    def insert(self, intervals: List[List[int]], newInterval: List[int]) -> List[List[int]]:
        left, right  = newInterval
        placed = False
        ans = list()

        for li, ri in intervals:
            if(li > right):
                if not placed:
                    ans.append([left, right])
                    placed = True
                ans.append([li,ri])

            elif(ri < left):
                ans.append([li,ri])
            
            else:
                left = min(left, li)
                right = min(right, ri)
            
            if(not placed):
                ans.append([left, right])
                
            return ans
